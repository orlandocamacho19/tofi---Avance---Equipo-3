<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradadolineal"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/degradadolineal"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/btnAtrasConfig"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:background="@drawable/regresarmorado"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="-100dp"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-85dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Preguntas Frecuentes"
            android:textColor="@color/moradoOsbcuro"
            android:textSize="25sp" />

    </RelativeLayout>


    <Button
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="-370dp"
        android:text="¿Cuantos perfiles puedo crear con TOFI?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textAllCaps="false"
        android:background="@drawable/style_botone_degradadoblanco"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="-330dp"
        android:text="Olvidé mi nombre de usuario"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textAllCaps="false"
        android:background="@drawable/style_botone_degradadoblanco"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="-330dp"
        android:text="Quiero cambiar el ícono de mi perfil"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textAllCaps="false"
        android:background="@drawable/style_botone_degradadoblanco"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="-330dp"
        android:text="No puedo ver las imagenes de la historia"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textAllCaps="false"
        android:background="@drawable/style_botone_degradadoblanco"/>

</LinearLayout>